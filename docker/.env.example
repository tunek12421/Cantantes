# PostgreSQL Configuration
POSTGRES_DB=chat_e2ee
POSTGRES_USER=chat_user
POSTGRES_PASSWORD=change_this_strong_password_123!
POSTGRES_PORT=5432

# Redis/KeyDB Configuration
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_456!

# MinIO Configuration
MINIO_ROOT_USER=chat_minio_admin
MINIO_ROOT_PASSWORD=change_this_minio_password_789!
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# pgAdmin Configuration (Development only)
PGADMIN_EMAIL=admin@chat-e2ee.local
PGADMIN_PASSWORD=change_this_pgadmin_password!
PGADMIN_PORT=5050

# Application Configuration
APP_ENV=development
APP_DEBUG=false
APP_PORT=8080

# JWT Configuration
JWT_SECRET=change_this_jwt_secret_key_very_long_and_random!
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=7d

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Encryption Keys
E2EE_SERVER_KEY=change_this_server_encryption_key!

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Backup Configuration
BACKUP_ENCRYPTION_KEY=change_this_backup_encryption_key!
B2_ACCOUNT_ID=your_backblaze_account_id
B2_APPLICATION_KEY=your_backblaze_app_key
B2_BUCKET_NAME=chat-e2ee-backups